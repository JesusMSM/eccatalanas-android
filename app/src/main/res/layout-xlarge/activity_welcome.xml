<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/eclogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/ec_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/welcome_string"
        android:id="@+id/eg2015"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ec_logo"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/abc_button_padding_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eg2015"
        android:id="@+id/spinnerIdioma"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15pt"
        android:text="@string/introduce_tu_provincia"
        android:id="@+id/introduzcaProvincia"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinnerIdioma"
        />
    <Spinner
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/abc_button_padding_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/introduzcaProvincia"
        android:id="@+id/spinnerProvincia"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/empezar"
        android:textStyle="bold"
        android:background="@drawable/welcome_button"
        android:onClick="start"
        android:layout_marginTop="22dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:paddingTop="@dimen/abc_button_padding_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_below="@+id/spinnerProvincia"
        android:layout_centerHorizontal="true"
        android:id="@+id/start" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWERED BY "
            android:id="@+id/powered"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="5pt"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/huawei_horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/powered"/>
    </RelativeLayout>
</RelativeLayout>