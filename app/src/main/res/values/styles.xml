<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="mp_colorAccent">#165875</item> <!--Color de los titulos de las preferencias -->
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:dropDownSpinnerStyle">@style/AppSpinner</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="selectableItemBackground">@color/ColorAccent</item>
        <item name="android:selectableItemBackground">@color/ColorAccent</item>
        <item name="actionBarItemBackground">@color/black</item>
        <item name="android:actionBarItemBackground">@color/black</item>
    </style>

    <style name="MyTabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">#5DFC0A</item>
    </style>
    <style name="AppSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:dropDownSelector">@drawable/abc_spinner_mtrl_am_alpha</item>
    </style>

</resources>
