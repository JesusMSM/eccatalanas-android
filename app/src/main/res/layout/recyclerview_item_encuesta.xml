<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenPSC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/psc_enc"
                    android:text="@string/psc_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxPSC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenCUP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/cup_enc"
                    android:text="@string/cup_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxCUP"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenJPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/jps_enc"
                    android:text="@string/jps_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxJPS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenPP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/pp_enc"
                    android:text="@string/pp_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxPP"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenUDC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/udc_enc"
                    android:text="@string/udc_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxUDC"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenCS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/cs_enc"
                    android:text="@string/cs_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxCS"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/imagenCSQEP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:adjustViewBounds="true"
                    android:padding="3dp"
                    android:layout_gravity="top"
                    android:src="@drawable/psc"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="3dp"
                    android:id="@+id/csqep_enc"
                    android:text="@string/csqep_nombre"
                    android:layout_gravity="center_vertical"/>
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/checkboxCSQEP"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/votar"
                    android:text="Votar"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/verResultados"
                    android:text="Ver Resultados"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>