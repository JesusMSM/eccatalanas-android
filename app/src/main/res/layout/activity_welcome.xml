<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ec_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/ec_logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ELECCIONES GENERALES 2015"
        android:id="@+id/eg2015"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ec_logo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/introduce_tu_provincia"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eg2015"
        android:id="@+id/provincia"
        android:backgroundTint="@color/white"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/abc_button_padding_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/provincia"
        android:id="@+id/spinnerIdioma"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/empezar"
        android:textStyle="bold"
        android:background="@drawable/welcome_button"
        android:onClick="start"
        android:layout_marginTop="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="@dimen/abc_button_padding_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_below="@+id/spinnerIdioma"
        android:layout_centerHorizontal="true"
        android:id="@+id/start" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="9dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:text="POWERED BY"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/huawei_logo"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
</RelativeLayout>