<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="-15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imagen"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:src="@drawable/cs"
                android:layout_gravity="top"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="CUP"
                    android:gravity="center_vertical"
                    android:background="@color/ColorAccent"
                    android:textColor="@color/white"
                    android:textSize="7pt"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/representantes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/black"
                    android:text="Representante: David Fernàndez (portavoz)"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/fundacion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/black"
                    android:text="Fundación: 1991"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/escanos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/black"
                    android:text="Número de escaños actuales: 3 / 135"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/porcentajeVotos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:text="% de votos en las últimas elecciones: 3,47%"
                    android:textColor="@color/black"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/ideologia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/black"
                    android:text="Ideología sobre Cataluña: Independentista"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt" />

                <TextView
                    android:id="@+id/partidosRepresentados"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="7dp"
                    android:textColor="@color/black"
                    android:text="Partidos representados: CUP se coordina con la Asamblea Municipal de la Izquierda Independentista"
                    android:gravity="fill_horizontal"
                    android:textSize="6pt"
                    android:paddingBottom="30dp"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_add_white"
        app:fabSize="mini"
        app:borderWidth="0dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="-45dp"
        android:layout_marginRight="1dp"
        android:layout_marginEnd="1dp"
        android:clickable="true"
        android:padding="-5dp" />

</LinearLayout>